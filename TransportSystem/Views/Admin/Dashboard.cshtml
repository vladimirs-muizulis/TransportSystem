<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transport System</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/script.js"></script>
</head>
<body>
    <div class="container">
        <!-- Top panel for mode switching -->
        <div class="top-panel">
            <button id="modeTransport" class="active">Transport</button>
            <button id="modeRoutes">Routes</button>
        </div>

        <!-- Main container -->
        <div class="main-content">
            <!-- Left panel -->
            <div class="left-panel">
                <h2 id="listTitle">Transport List</h2>
                <button id="addNewButton">Add</button>
                <ul id="itemList">
                    <li>
                        <div class="route-name">Name</div>
                        <div class="button-group">
                            <button class="edit-button">Edit</button>
                            <button class="delete-button">Delete</button>
                        </div>
                    </li>
                </ul>
            </div>

            <!-- Right panel -->
            <div class="right-panel">
                <h2 id="formTitle">Edit Transport</h2>
                <form id="editForm">
                    <div id="transportFields">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name">
                        <label for="type">Type:</label>
                        <input type="text" id="type" name="type">
                        <label for="capacity">Capacity:</label>
                        <input type="number" id="capacity" name="capacity">
                    </div>
                    <div id="routeFields" style="display: none;">
                        <label for="routeName">Route Name:</label>
                        <input type="text" id="routeName" name="routeName">

                        <label for="stops">Stops (comma-separated):</label>
                        <input type="text" id="stops" name="stops">

                        <label for="arrivalTimes">Arrival Times (comma-separated):</label>
                        <input type="text" id="arrivalTimes" name="arrivalTimes">

                        <label for="assignedBus">Transport:</label>
                        <select id="assignedBus" name="assignedBus"></select>
                    </div>
                    <button type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
