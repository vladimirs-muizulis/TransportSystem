@{
    ViewData["Title"] = "Transport List (User)";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <div class="container">
        <h1 class="page-title">Transport List</h1>

        <!-- Transport Table (User can only view) -->
        <div class="table-section">
            <table id="transportTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Capacity</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            loadTransport(); // load transport on page open
        });

        // Load transport data from the API
        function loadTransport() {
            $.get("/api/Transport", function (data) {
                var rows = "";
                data.forEach(function (item) {
                    rows += `<tr>
                                <td>${item.id}</td>
                                <td>${item.name}</td>
                                <td>${item.type}</td>
                                <td>${item.capacity}</td>
                             </tr>`;
                });
                $("#transportTable tbody").html(rows);
            });
        }
    </script>

</body>
</html>