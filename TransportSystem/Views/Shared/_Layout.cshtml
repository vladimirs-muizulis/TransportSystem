@using Microsoft.AspNetCore.Http
@{
    var role = ViewData["Role"] as string;  // Retrieve role from ViewData
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Transport System</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to your styles -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <header>
        <nav>
            <ul>
                <li><a href="/Home/Index">Home</a></li>

                <!-- Show specific links based on role -->
                @if (role == "Admin")
                {
                    <li><a href="/Admin/Dashboard">Dashboard</a></li>
                    <li><a href="/Admin/ManageTransports">Manage Transports</a></li>
                }

                @if (role == "User")
                {
                    <li><a href="/User/TransportList">Transport List</a></li>
                }

                <!-- Show login/logout based on session -->
                @if (role != null)
                {
                    <li><a href="/Account/Logout">Logout</a></li>
                }
                else
                {
                    <li><a href="/Account/Login">Login</a></li>
                }
            </ul>
        </nav>
    </header>

    <main>
        @RenderBody() <!-- Content of each page will go here -->
    </main>

</body>
</html>